<odoo>
    <data>
        <record model="ir.module.category" id="module_ecaertes_leaves_category">
            <field name="name">Ecartes Time Off Category</field>
        </record>
        <record id="group_ecartes_leaves_sale_inherit" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="ecartes_leaves.module_ecaertes_leaves_category"/>
        </record>
        <record id="group_ecartes_leaves_account" model="res.groups">
            <field name="name">Employee Manager</field>
            <field name="category_id" ref="ecartes_leaves.module_ecaertes_leaves_category"/>
        </record>
        <record id="group_ecartes_leaves_management" model="res.groups">
            <field name="name">Senior Management</field>
            <field name="category_id" ref="ecartes_leaves.module_ecaertes_leaves_category"/>
        </record>
        <record id="group_ecartes_leaves_hr" model="res.groups">
            <field name="name">HR</field>
            <field name="category_id" ref="ecartes_leaves.module_ecaertes_leaves_category"/>
        </record>

        <record id="hr_rule_all_requests" model="ir.rule">
            <field name="name">Hr Rule All Requests</field>
            <field name="model_id" ref="ecartes_leaves.model_hr_leave"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('ecartes_leaves.group_ecartes_leaves_hr'))]"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

        <record id="rule_time_off_emp_manager" model="ir.rule">
            <field name="name">emp time off Managers</field>
            <field name="model_id" ref="model_hr_leave"/>
            <field name="domain_force">[('employee_id.parent_id', '=', user.employee_id.id)]</field>
            <field name="groups" eval="[(4, ref('ecartes_leaves.group_ecartes_leaves_account'))]"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
        </record>
    </data>
</odoo>

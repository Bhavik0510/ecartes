<odoo>
    <data>
        <record id="group_sale_domestic_admin" model="res.groups">
            <field name="name">Domestic Admin</field>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="category_id" ref="base.module_category_sales_sales"/>
        </record>

        <record id="sales_team.group_sale_salesman_all_leads" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('ecartes_sale.group_sale_domestic_admin'))]"/>
        </record>

        <record id="sales_domestic_user_rule" model="ir.rule">
            <field name="name">Domestic Sales Order Rule</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('currency_id.name','=','INR')]</field>
            <field name="groups" eval="[(4, ref('ecartes_sale.group_sale_domestic_admin'))]"/>
        </record>

        <record id="minimum_cost_allowed_user" model="res.groups">
        <field name="name">Minimum Cost Allowed User</field>
        </record>

        <record id="module_category_ecartes_sales" model="ir.module.category">
            <field name="name">Ecartes Sale</field>
            <field name="description">Helps you handle your quotations, sale orders and invoicing.</field>
        </record>
        
        <record id="group_access_user_change_price" model="res.groups">
            <field name="name">Access to change price</field>
            <field name="category_id" ref="ecartes_sale.module_category_ecartes_sales"/>
        </record>
            
        <record id="group_access_user_change_quantity" model="res.groups">
            <field name="name">Access to change quantity</field>
            <field name="category_id" ref="ecartes_sale.module_category_ecartes_sales"/>
        </record>
    </data>
</odoo>
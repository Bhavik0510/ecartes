    <record id="base.action_res_company_form" model="ir.actions.act_window">
        <field name="name">Companies</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.company</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'is_company_create':True}</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new company
            </p>
            <p>
                Create and manage the companies that will be managed by Odoo from here. Shops or subsidiaries can be
                created and maintained from here.
            </p>
        </field>
    </record>

    <record id="res_company_inherit_form_view" model="ir.ui.view">
        <field name="name">Res company Inherit Form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <field name="cin"/>
                <field name="fax"/>
            </xpath>
            </field>
            </record>

</odoo>
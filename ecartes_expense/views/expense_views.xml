<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ecartes_expense_sheet_view_form-approval_stages" model="ir.ui.view">
        <field name="name">ecartes.expense.sheet.view.form.approval.stages</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_approve_expense_sheets']" position="attributes">
                <attribute name="groups">ecartes_expense.group_ecartes_expense_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='action_sheet_move_post']" position="attributes">
                <attribute name="groups">ecartes_expense.group_ecartes_expense_sr_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='action_register_payment']" position="attributes">
                <attribute name="groups">ecartes_expense.group_ecartes_expense_account_department</attribute>
            </xpath>
        </field>
    </record>
</odoo>
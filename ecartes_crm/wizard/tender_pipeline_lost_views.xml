<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="tender_pipeline_lost_view_form" model="ir.ui.view">
            <field name="name">tender.pipeline.lost.form</field>
            <field name="model">tender.pipeline.lost</field>
            <field name="arch" type="xml">
                <form string="Lost Reason">
                    <group>
                        <field name="lost_reason" options="{'no_create_edit': True}" />
                    </group>
                    <footer>
                        <button name="action_lost_reason_apply" string="Submit" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="tender_pipeline_lost_action" model="ir.actions.act_window">
            <field name="name">Lost Reason</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tender.pipeline.lost</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="tender_pipeline_lost_view_form"/>
            <field name="target">new</field>
            <field name="context">{
                'dialog_size' : 'medium',
            }</field>
        </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="contact_data_reminder" model="ir.cron">
        <field name="name">Contact Data Expiration</field>
        <field name="model_id" ref="model_contact_document"/>
        <field name="state">code</field>
        <field name="code">model.mail_reminder()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
    </record>

    <record model='ir.ui.view' id='contactdocument_form_view'>
        <field name="name">contact.document.form</field>
        <field name="model">contact.document</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(ecartes_contact_documents.renewed_contact_document_action)d" type="action" string="Renewed" class="oe_highlight" invisible="state != 'expired'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="document_name"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <field name="employee_ref" invisible="1"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model='ir.ui.view' id='employee_document_list_view'>
        <field name="name">contact.document.list</field>
        <field name="model">contact.document</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
            </list>
        </field>
    </record>

    <record id="hr_employee_document_details_action" model="ir.actions.act_window">
        <field name="name">contact.document</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contact.document</field>
        <field name="view_mode">form,list</field>
    </record>

    <record model="ir.ui.view" id="Contact_document_inherit_form_view">
        <field name="name">Contact.form.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" name="document_view_btn" type="object" icon="fa-list-ol">
                    <field string="Documents" name="document_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
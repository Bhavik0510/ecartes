<odoo>
    <data>
        <record id="paperformat_ecartes_sale" model="report.paperformat">
            <field name="name">Ecarte's A4 Sale</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">45</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

        <record id="paperformat_ecartes_po" model="report.paperformat">
            <field name="name">Ecarte's A4 PO</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">70</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">65</field>
            <field name="dpi">90</field>
        </record>

        <record id="paperformat_ecartes" model="report.paperformat">
            <field name="name">Ecarte's A4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <record id="sale.action_report_saleorder" model="ir.actions.report">
            <field name="paperformat_id" ref="ecartes_report.paperformat_ecartes_sale"/>
        </record>

        <record id="purchase.action_report_purchase_order" model="ir.actions.report">
            <field name="paperformat_id" ref="ecartes_report.paperformat_ecartes_po"/>
        </record>

    </data>
</odoo>
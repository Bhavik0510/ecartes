<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    <p>Translatable template</p>-->
    <template id="ecartes_quote_usd_report_template">
        <t t-foreach="docs" t-as="t">
            <t t-call="web.html_container">
                <t t-call="ecartes_report.delhi_custom_external_layout_header">
                    <div class="page">
                        <div style="width:100%;float:left;font-weight:bold;text-align:center;font-size:24px;text-decoration: underline;margin-top:40px;">
                            <span t-if="t.state not in ['draft','sent']">Sales Order</span>
                            <span t-if="t.state in ['draft','sent']">Quotation</span>
                        </div>

                        <div style="width:100%;float:left;border:1px solid black; margin-bottom: 5px; margin-top: 15px;page-break-inside: avoid;font-size:15px;">
                            <div style="width:100%;float:left;display:flex;">
                            
                                <div style="width:50%;float:left;border-right:1px solid black;">
                                    <div style="font-weight:bold;text-align:center;border:1px solid black;border-top:0;border-left:0;border-right:0;padding: 5px ;background-color:#6d3473;color:white;">
                                        Consignee Details
                                    </div>
                                        <div style="padding:10px;">
                                            <div style="width:100%;float:left;display:flex;">
                                                <div style="font-weight:bold;"><span t-if="t.partner_shipping_id.name"><t t-esc="t.partner_shipping_id.name"/></span></div>
                                        <div><span t-if="t.partner_shipping_id.street"><t t-esc="t.partner_shipping_id.street"/></span>,<span t-if="t.partner_shipping_id.street2"><t t-esc="t.partner_shipping_id.street2"/></span></div>
                                        <div><span t-if="t.partner_shipping_id.city"><t t-esc="t.partner_shipping_id.city"/></span>, <span t-if="t.partner_shipping_id.street"><t t-esc="t.partner_shipping_id.state_id.name"/></span>-
                                            <span t-if="t.partner_shipping_id.zip"><t t-esc="t.partner_shipping_id.zip"/></span></div>

                                        </div>
                                        <div t-if="t.partner_shipping_id.gstin" style="width:100%;float:left;display:flex;">
                                            <div  style="width:15%;float:left;font-weight:bold;">
                                                GSTIN :
                                            </div>
                                            <div style="width:50%;float:left;">
                                                <span t-if="t.partner_shipping_id.gstin"><t t-esc="t.partner_shipping_id.gstin"/></span>
                                            </div>
                                        </div>
                                        <div t-if="t.partner_shipping_id" style="width:100%;float:left;display:flex;">
                                            <div style="width: 33%;float:left;font-weight:bold;">
                                                Contact Person :
                                            </div>
                                            <div style="width:50%;float:left;">
                                                <span t-if="t.partner_shipping_id.name"><t t-esc="t.partner_shipping_id.name"/></span>
                                            </div>
                                        </div>
                                        <div t-if="t.partner_shipping_id.phone" style="width:100%;float:left;display:flex;">
                                            <div style="width: 15%;float:left;font-weight:bold;">
                                                Phone :
                                            </div>
                                            <div style="width:50%;float:left;">
                                                <span t-if="t.partner_shipping_id.phone"><t t-esc="t.partner_shipping_id.phone"/></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div style="width:50%;float:right;">

                                    <div style="font-weight:bold;text-align:center;background-color:#6d3473;color:white;border-bottom:0px;border-top:0;padding:5px">
                                        Customer Details
                                    </div>
                                    <div class="p-2" style="font-size:15px;text-align:left;">
                                        <div style="font-weight:bold;text-align:right;"><span t-if="t.partner_id.name"><t t-esc="t.partner_id.name"/></span></div>
                                        <div style="text-align:right;"><span t-if="t.partner_id.street"><t t-esc="t.partner_id.street"/></span>,<span t-if="t.partner_id.street2"><t t-esc="t.partner_id.street2"/></span></div>
                                        <div style="text-align:right;"><span t-if="t.partner_id.city"><t t-esc="t.partner_id.city"/></span>, <span t-if="t.partner_id.street"><t t-esc="t.partner_id.state_id.name"/></span>-
                                            <span t-if="t.partner_id.zip"><t t-esc="t.partner_id.zip"/></span>
                                        </div>
                                        <div style="width:100%;float:left;display:flex;">
                                            <div style="width:65%;float:left;font-weight:bold;text-align:right;" t-if="t.partner_id.gstin">
                                                Registration No :
                                            </div>
                                            <div style="width:35%;float:left;text-align:right;">
                                                <span > </span>
                                            </div>
                                        </div>
                            
                                        <div style="width:100%;float:left;display:flex;">
                                            <div style="width: 65%;float:left;font-weight:bold;text-align:right;"  t-if="t.partner_id.phone">
                                                Phone :
                                            </div>
                                            <div style="width:35%;float:left;text-align:right;">
                                                <span t-if="t.partner_id.phone"><t t-esc="t.partner_id.phone"/></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div style="width:100%;float:left;display:flex;margin-bottom:1px;color:#6d3473;font-weight:800;">
                            <div t-if="t.name" style="width:100%;float:right;text-align:left;font-size:20px;">
                                <h5 style="font-weight:800;" >
                                    <span t-if="t.state not in ['draft','sent']">Sales Order#</span>
                                    <span t-if="t.state in ['draft','sent']">Quotation#</span>
                                    <span t-field="t.name" class="fw-bold"/>
                                </h5>
                            </div>
                        </div>
                        
                        
                        <div style="width:100%;float:left;border:1px solid black;margin-bottom:10px;padding:2px;font-size:15px;">
                            <div class="row mt50 mb32" >
                                <div t-if="t.date_order and t.state in ['draft','sent']" class="col-3 col-auto mb-2 mw-100 pl-4" style="text-align:left ;">
                                    <strong >Quotation Date:</strong>
                                    <p class="m-0" t-field="t.date_order" t-options='{"widget": "date"}'/>
                                </div>
                                <div t-if="t.date_order and t.state in ['sale']" class="col-3 col-auto mb-2 mw-100 pl-4" style="text-align:left ;">
                                    <strong >Order Date:</strong>
                                    <p class="m-0" t-field="t.date_order" t-options='{"widget": "date"}'/>
                                </div>

                                <div class="col-auto col-3 mw-100 mb-2" t-if="t.name" style="text-align:center ;">
                                    <strong>Ref:</strong>
                                    <p class="m-0"><t t-esc="t.name"/></p>
                                </div>
                               
                                <div class="col-auto col-3 mw-100 mb-2" style="text-align:right ;">
                                    <strong>Prepared by:</strong>
                                    <p class="m-0"><span t-if="t.user_id.name"><t t-esc="t.user_id.name"/></span></p>
                                </div>
                            </div>
                        </div>
                     
                        
                        <table class="table" style="font-size:15px;">
                            <style>th,td{ border: 1px solid black !important; }</style>
                            <tr style="background-color:#6d3473; color:white">
                                <t>
                                    <th class="text-center">S.No</th>
                                    <th class="text-center">Product Name</th>
                                    <th class="text-center" style="width:10%">Product Code</th>
                                    <th class="text-center">HSN Code</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-center" style="width:20%">Unit Price</th>
                                    <!-- <th class="text-center">Taxes</th> -->
                                    <th class="text-center" style="width:20%">Sub Total</th>
                                </t>
                            </tr>
                            <tr>
                                <t t-set="sr_no" t-value="0"/>
                                <t t-foreach="t.order_line" t-as="d">
                                    <tr class="border-black">
                                        <t t-set="sr_no" t-value="sr_no+1"/>
                                        <td style="border:1px solid black">
                                            <span t-esc="sr_no"/>
                                        </td>
                                        <td>
                                            <span t-field="d.product_id.name"/>
                                            <br></br>
                                            <span style= "font-size:13px;font-style: oblique;" t-esc="d.product_id.description"/>
                                        </td>
                                        <td>
                                            <t t-esc="d.product_id.default_code"/>
                                        </td>
                                        <td>
                                             <t t-esc='d.product_id.l10n_in_hsn_code'/>
                                        </td>
                                        <td>
                                            <t t-esc="d.product_uom_qty"/>
                                        </td>
                                        <td>
                                            <span>$ <t t-esc="d.price_unit"/></span>
                                            
                                        </td>
                                        <!-- <td>
                                            <t t-foreach="d.tax_id" t-as="c">
                                                <t t-esc="c.name"/>

                                            </t>

                                        </td> -->
                                        <td>
                                            <span>$</span>
                                            <span t-esc="d.price_subtotal"/>
                                        </td>
                                    </tr>

                                </t>

                            </tr>
                        </table>

                        <table style="width:60%;float:right;text-align:right;margin-bottom: 15px;page-break-inside: avoid;">
                            <tr class="border-black" style="background-color:#393D47;color:white; text-align:right;font-size:15px;margin-top:10px;">
                                <th style="padding:5px;">Grand Total </th>
                                <td style="background-color:#393D47;color:white; text-align:right;padding:5px;">
                                    <span>$</span>
                                    <t t-esc="t.amount_untaxed"/>
                                </td>
                            </tr>
                        </table>
                        <div style="width:100%;float:left;text-align:left;margin-top: 0px;page-break-inside: avoid;font-size:15px;">
                            <div >
                                <div>
                                    <b>Terms and Condition : </b>
                                </div>
                                <div t-if="t.validity_date"><b >Validity : </b><t t-esc="t.validity_date"/></div>
                                <div t-if="t.commitment_date"><b >Current Delivery Time :</b><t t-esc="t.commitment_date"/></div>
                                <div t-if="t.payment_term_id.name"><b >Payment Terms : </b><t t-esc="t.payment_term_id.name"/></div>
                                <div ><b>Warranty : </b></div>
                                <div t-if="t.note"><t t-esc="t.note"/></div>                            
                            </div>
                            <div style="width:100%;float:left;text-align:left;margin-top: 15px;font-size:15px;">
                                <div>Consumables subject to wear-and-tear are not covered by the warranty</div>
                                <div>No claims regarding consequential loss of any kind or nature whatsoever will be accepted by Ecartes Technology Pvt. Ltd.</div>
                                <div>Warranty automatically gets void in case of wrong use of the machinery or use of fake or pirated consumables</div>
                            </div> 
                        </div>   
                    </div>
                    
                </t>
            </t>
        </t>
    </template>
</odoo>
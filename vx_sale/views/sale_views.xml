<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="sale_view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='client_order_ref']" position="replace"/>
        	<xpath expr="//field[@name='payment_term_id']" position="after">
        		<field name="client_order_ref"/>
        	</xpath>

            <xpath expr="//button[@name='action_draft']" position="after">
                <button name="%(vx_sale.action_update_date_so_po_invoice)d" type="action" string="Update Date" invisible="state in ['draft', 'sent', 'cancel']" groups="base.group_system" />
            </xpath>
        </field>
    </record>
</odoo>
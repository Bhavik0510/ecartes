<odoo>
    <record id="wfh_grp_category" model="ir.module.category">
        <field name="description">WFH</field>
        <field name="name">WFH</field>
    </record>

    <record id="wfh_grp_manger" model="res.groups">
        <field name="name">Senior Management</field>
        <field name="category_id" ref="ecarte_work_from_home.wfh_grp_category"/>
    </record>

    <record id="group_wfh_accounts" model="res.groups">
        <field name="name">Employee Manager</field>
        <field name="category_id" ref="ecarte_work_from_home.wfh_grp_category"/>
    </record>
    <record id="group_wfh_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="ecarte_work_from_home.wfh_grp_category"/>
    </record>

    <!--    <record id="group_wfh_admin" model="res.groups">-->
    <!--        <field name="name">Administration</field>-->
    <!--        <field name="category_id" ref="employee_work_from_home.wfh_grp_category"/>-->
    <!--        <field name="implied_ids" eval="[(6, 0, [ref('employee_work_from_home.group_wfh_manager')])]"/>-->
    <!--    </record>-->


    <record id="rule_emp_managers" model="ir.rule">
        <field name="name">emp Managers</field>
        <field name="model_id" ref="model_ecarte_work_from_home"/>
        <field name="domain_force">[('employee_id.parent_id', '=', user.employee_id.id)]</field>
        <field name="groups" eval="[(4, ref('group_wfh_accounts'))]"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_read" eval="True"/>
    </record>

    <record id="rule_emp_user" model="ir.rule">
        <field name="name">emp user</field>
        <field name="model_id" ref="model_ecarte_work_from_home"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_wfh_user'))]"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_read" eval="True"/>
    </record>

    <record id="rule_emp_sr_managers" model="ir.rule">
        <field name="name">emp Sr.Manager</field>
        <field name="model_id" ref="model_ecarte_work_from_home"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('wfh_grp_manger'))]"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_read" eval="True"/>
    </record>

     <record id="wfh_ecarte_rule_hr" model="ir.rule">
        <field name="name">See all record</field>
        <field name="model_id" ref="ecarte_work_from_home.model_ecarte_work_from_home"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('ecartes_leaves.group_ecartes_leaves_hr'))]"/>
    </record>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="amc_terms_view_tree" model="ir.ui.view">
            <field name="name">amc.terms.view.tree</field>
            <field name="model">amc.term</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="amc_by"/>
                    <field name="total_no_of"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <record id="amc_terms_view_form" model="ir.ui.view">
            <field name="name">amc.terms.view.form</field>
            <field name="model">amc.term</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label class="o_form_label" for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="amc_by"/>
                            <field name="total_no_of" string="No. Of Days" invisible = " amc_by != 'day' "/>
                            <field name="total_no_of" string="No. Of Year" invisible = " amc_by != 'year' "/>
                            <field name="total_no_of" string="No. Of Month" invisible = " amc_by != 'month' "/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="amc_term_action" model="ir.actions.act_window">
            <field name="name">AMC Term</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">amc.term</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="amc_term_menu" name="AMC Term" parent="ecartes_amc.amc_config" action="ecartes_amc.amc_term_action"/>
    </data>
</odoo>
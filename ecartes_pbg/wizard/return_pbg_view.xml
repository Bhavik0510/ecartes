<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="return_pbg_view_form" model="ir.ui.view">
            <field name="name">return.pbg.view.form</field>
            <field name="model">return.pbg</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="pbg_returned_date"/>
                            <field name="returned_amount"/>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object" name="go_submit" string="Submit" class="btn btn-info"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_return_pbg" model="ir.actions.act_window">
            <field name="name">Return PBG</field>
            <field name="res_model">return.pbg</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="warranty_terms_view_tree" model="ir.ui.view">
            <field name="name">warranty.terms.view.tree</field>
            <field name="model">warranty.term</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="warranty_by"/>
                    <field name="total_no_of"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <record id="warranty_terms_view_form" model="ir.ui.view">
            <field name="name">warranty.terms.view.form</field>
            <field name="model">warranty.term</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label class="o_form_label" for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="warranty_by"/>
                            <field name="total_no_of" string="No. Of Days" invisible="warranty_by != 'day'"/>
                            <field name="total_no_of" string="No. Of Year" invisible="warranty_by != 'year'"/>
                            <field name="total_no_of" string="No. Of Month" invisible="warranty_by != 'month'"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="warranty_term_action" model="ir.actions.act_window">
            <field name="name">Warranty Term</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">warranty.term</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="warranty_term_menu" name="Warranty Term" parent="ecartes_product_warranty.product_warranty_config" action="ecartes_product_warranty.warranty_term_action"/>
    </data>
</odoo>
<odoo>
    <data>
        <record id="account_move_form_inherit_warranty" model="ir.ui.view">
            <field name="name">account.move.form.inherit.warranty</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='deal']" position="after">
                    <field name="is_warranty_invoice" readonly="1" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='deal']" position="before">
                    <field name="warranty_id" invisible="not is_warranty_invoice"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
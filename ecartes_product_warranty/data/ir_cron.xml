<odoo>
    <data>
        <record id="warranty_expiry_cron" model="ir.cron">
            <field name="name">Warranty Expire Cron</field>
            <field name="model_id" ref="model_product_warranty"/>
            <field name="state">code</field>
            <field name="code">model._check_product_warranty_cron()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="False"/>
        </record>

        <record id="ir_cron_expire_warranties" model="ir.cron">
            <field name="name">Expire Warranties</field>
            <field name="model_id" ref="model_product_warranty"/>
            <field name="state">code</field>
            <field name="code">model._expire_warranties()</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="interval_number">1</field> <!-- runs every 1 day -->
            <field name="interval_type">days</field>
        </record>
    </data>
</odoo>
<odoo>
    <data>
        <record model="ir.module.category" id="module_ecaertes_emd_category">
            <field name="name">EMD</field>
        </record>
        <record id="group_ecartes_emd_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="ecartes_emd.module_ecaertes_emd_category"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record id="group_ecartes_emd_account" model="res.groups">
            <field name="name">Accounts</field>
            <field name="category_id" ref="ecartes_emd.module_ecaertes_emd_category"/>
        </record>
        <record id="group_ecartes_emd_manager" model="res.groups">
            <field name="name">Senior Management</field>
            <field name="category_id" ref="ecartes_emd.module_ecaertes_emd_category"/>
        </record>

        <record id="ecartes_emd_comp_rule" model="ir.rule">
            <field name="name">EMD multi-company</field>
            <field name="model_id" ref="model_ecartes_emd"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
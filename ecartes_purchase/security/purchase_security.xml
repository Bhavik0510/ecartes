<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_purchase_domestic" model="res.groups">
        <field name="name">Domestic Admin</field>
        <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        <field name="category_id" ref="base.module_category_inventory_purchase"/>
    </record>

    <record id="purchase.group_purchase_manager" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('ecartes_purchase.group_purchase_domestic'))]"/>
    </record>

    <record id="purchase_domestic_user_rule" model="ir.rule">
        <field name="name">Domestic Purchase Order Rule</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="domain_force">[('currency_id.name','=','INR')]</field>
        <field name="groups" eval="[(4, ref('ecartes_purchase.group_purchase_domestic'))]"/>
    </record>

    <record id="purchase_order_personal_rule" model="ir.rule">
        <field name="name">Personal Purchase Orders</field>
        <field ref="purchase.model_purchase_order" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>

    <record id="purchase_order_see_all" model="ir.rule">
        <field name="name">All Purchase Orders</field>
        <field ref="purchase.model_purchase_order" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
    </record>
</odoo>